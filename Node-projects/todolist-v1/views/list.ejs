<%- include('header.ejs') -%>

  <div class="box" id="heading">
    <h1><%= listHeading %></h1>
  </div>

  <div class="box">
    <% for(var i = 0; i < newListItems.length ; i++) { %>
    <div class="item">
      <input type="checkbox">
      <p><%=  newListItems[i]  %></p>
    </div>
    <% } %>

    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New item" autocomplete="off">
      <button type="submit" name="list" value="<%= listHeading %>">+</button>
    </form>
  </div>

<%- include('footer.ejs') -%>
